{
  "name": "rad-parser",
  "version": "2.0.0",
  "description": "A lightweight, performant, self-contained DICOM parser with zero external dependencies",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "bin": {
    "rad-parser": "./bin/rad-parser.js"
  },
  "type": "module",
  "keywords": [
    "dicom",
    "parser",
    "medical-imaging",
    "radiology",
    "dicom-parser",
    "zero-dependencies",
    "lightweight",
    "typescript",
    "dicom-part10",
    "transfer-syntax",
    "pixel-data"
  ],
  "author": "AjRoAs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AjRoAs/rad-parse.git"
  },
  "bugs": {
    "url": "https://github.com/AjRoAs/rad-parse/issues"
  },
  "homepage": "https://github.com/AjRoAs/rad-parse#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "tsc && npm run build:cjs",
    "build:cjs": "esbuild src/index.ts --bundle --format=cjs --platform=node --target=node16 --outfile=dist/index.cjs --log-level=info",
    "bundle:full": "esbuild src/index.ts --bundle --format=esm --target=es2020 --platform=neutral --outfile=dist/rad-parser.js --sourcemap --log-level=info && esbuild src/index.ts --bundle --format=esm --target=es2020 --platform=neutral --outfile=dist/rad-parser.min.js --minify --log-level=info",
    "bundle:lite": "esbuild src/index-lite.ts --bundle --format=esm --target=es2020 --platform=neutral --outfile=dist/rad-parser-nodict.js --sourcemap --log-level=info && esbuild src/index-lite.ts --bundle --format=esm --target=es2020 --platform=neutral --outfile=dist/rad-parser-nodict.min.js --minify --log-level=info",
    "bundle:dictionary": "esbuild src/dictionary-entry.ts --bundle --format=esm --target=es2020 --platform=neutral --outfile=dist/rad-parser-dictionary.js --sourcemap --log-level=info",
    "bundle": "npm run bundle:full && npm run bundle:lite && npm run bundle:dictionary",
    "release": "npm run build && npm run bundle",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "benchmark": "tsx --tsconfig tsconfig.json benchmark.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.ts\"",
    "prepublishOnly": "npm run release"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.2",
    "@vitest/coverage-v8": "^4.0.15",
    "dcmjs": "^0.45.0",
    "dicom-parser": "^1.8.21",
    "efferent-dicom": "^1.3.0",
    "esbuild": "^0.20.0",
    "tsx": "^4.7.0",
    "vitest": "^4.0.15"
  }
}
